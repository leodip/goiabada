FROM golang:1.25.7-alpine AS build

RUN apk add --no-cache tzdata alpine-conf curl bash make libstdc++ libgcc
RUN setup-timezone -z Europe/Lisbon

WORKDIR /app

# Tailwind CLI tool
RUN curl -sfLO --retry 3 --retry-delay 5 https://github.com/tailwindlabs/tailwindcss/releases/download/v4.1.18/tailwindcss-linux-x64-musl
RUN chmod +x tailwindcss-linux-x64-musl
RUN mv tailwindcss-linux-x64-musl /usr/local/bin/tailwindcss

COPY .. .

WORKDIR /app/authserver

ENTRYPOINT ["/bin/bash", "-c", "make test-ci"]
